<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activityMain"
            type="com.example.obuza.MainActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/current_playing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <fragment
            android:id="@+id/current_playing"
            android:name="com.example.obuza.FragmentThree"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sections_control" />

        <RadioGroup
            android:id="@+id/sections_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/searchRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:checked="true"
                android:onClick="@{() -> activityMain.changeSection(0)}"/>

            <RadioButton
                android:id="@+id/favoriteRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite"
                android:onClick="@{() -> activityMain.changeSection(1)}"/>

<!--            <RadioButton-->
<!--                android:id="@+id/topRadioButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Top"-->
<!--                android:onClick="@{() -> activityMain.changeSection(2)}"/>-->
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>